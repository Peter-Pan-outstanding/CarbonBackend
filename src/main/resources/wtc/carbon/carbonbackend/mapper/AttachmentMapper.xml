<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MyBatis Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wtc.carbon.carbonbackend.mapper.AttachmentMapper">

    <!-- 定义 ResultMap -->
    <resultMap id="attachmentResultMap" type="wtc.carbon.carbonbackend.entity.Attachment">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="size" column="size"/>
        <result property="fileUrl" column="file_url"/>
        <result property="articleId" column="article_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>


    <!-- 根据文章 ID 查询附件 -->
    <select id="getAttachmentsByArticleId" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment WHERE article_id = #{articleId}
    </select>




<!--    以下方法均为扩展考虑，目前没有用到-->

    <!-- 查询所有附件 -->
    <select id="getAllAttachments" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment
    </select>

    <!-- 根据 ID 查询附件 -->
    <select id="getAttachmentById" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment WHERE id = #{id}
    </select>



    <!-- 分页查询所有附件 -->
    <select id="getAttachmentsWithPagination" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment
        ORDER BY id
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 获取附件总数 -->
    <select id="getAttachmentsCount" resultType="int">
        SELECT COUNT(*) FROM a_attachment
    </select>

    <!-- 根据条件查询附件 -->
    <select id="getAttachmentsByConditions" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment
        <where>
            <if test="fileUrl != null and fileUrl != ''">
                AND file_url = #{fileUrl}
            </if>
            <if test="articleId != null">
                AND article_id = #{articleId}
            </if>
        </where>
    </select>


    <!-- 删除附件 -->
    <delete id="deleteAttachment">
        DELETE FROM a_attachment WHERE id = #{id}
    </delete>

</mapper>
