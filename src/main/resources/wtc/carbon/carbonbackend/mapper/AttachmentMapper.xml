<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MyBatis Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wtc.carbon.carbonbackend.mapper.AttachmentMapper">

    <!-- 定义 ResultMap -->
    <resultMap id="attachmentResultMap" type="wtc.carbon.carbonbackend.entity.Attachment">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="size" column="size"/>
        <result property="fileUrl" column="file_url"/>
        <result property="articleId" column="article_id"/>
        <result property="announcementId" column="Announcement_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>


    <!-- 根据文章 ID 查询附件 -->
    <select id="getAttachmentsByArticleId" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment WHERE article_id = #{articleId}
    </select>

<!--    根据通告ID查询附件-->
    <select id="getAttachmentsByAnnouncementId" resultMap="attachmentResultMap">
        SELECT * FROM a_attachment WHERE Announcement_id = #{announcementId}
    </select>




</mapper>
